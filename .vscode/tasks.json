{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Backend",
            "type": "shell",
            "command": "npm run dev",
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "problemMatcher": []
        },
        {
            "label": "Run Frontend",
            "type": "shell",
            "command": "npm run dev",
            "options": {
                "cwd": "${workspaceFolder}/pmt"
            },
            "problemMatcher": []
        },
        {
            "label": "Run Ai Backend",
            "type": "shell",
            "command": "python main.py",
            "options": {
                "cwd": "${workspaceFolder}/ai_backend/api",
                },
        },
        {
            "label": "Run Both",
            "dependsOn": ["Run Backend", "Run Frontend","Run Ai Backend"],
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
     
    ]
}
